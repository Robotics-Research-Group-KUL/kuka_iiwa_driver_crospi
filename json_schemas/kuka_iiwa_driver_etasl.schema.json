{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$id":"kuka_iiwa_driver_etasl.schema.json",
    "type":"object",
    "properties":{
        "is-kuka_iiwa_driver_etasl" : {
            "description":"To indicate that the task will be executed using a KUKA IIWA robot.",
            "type":"boolean",
            "const":true
        }
    },
    "required":["is-kuka_iiwa_driver_etasl"],
    "additionalProperties": true,
    "dependencies":{
        "is-kuka_iiwa_driver_etasl":{
          "required":["ip_address", "fri_port"],
          "properties":{
                "ip_address" : {
                    "description":"IP address of the robot using Ipv4 format.",
                    "type":"string",
                    "pattern": "^(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])$",
                    "default": "192.168.1.1"
                },
                "fri_port" : {
                    "description":"FRI port number (related to communication).",
                    "type":"number",
                    "default": 30200,
                    "minimum": 0
                }
          }
        }
      }
}
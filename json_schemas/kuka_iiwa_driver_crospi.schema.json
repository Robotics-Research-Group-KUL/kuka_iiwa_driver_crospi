{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$id":"kuka_iiwa_driver_crospi.schema.json",
    "type":"object",
    "properties":{
        "is-kuka_iiwa_driver_crospi" : {
            "description":"To indicate that the task will be executed using a KUKA IIWA robot.",
            "type":"boolean",
            "const":true
        }
    },
    "required":["is-kuka_iiwa_driver_crospi"],
    "additionalProperties": true,
    "dependencies":{
        "is-kuka_iiwa_driver_crospi":{
          "required":["ip_address", "fri_port", "robot_joints", "periodicity"],
          "properties":{
                "ip_address" : {
                    "description":"IP address of the robot using Ipv4 format.",
                    "type":"string",
                    "pattern": "^(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])$",
                    "default": "192.168.1.1"
                },
                "fri_port" : {
                    "description":"FRI port number (related to communication).",
                    "type":"number",
                    "default": 30200,
                    "minimum": 0
                },
                "robot_joints": {
                    "description":"Names of the joints that will be interfaced through this robot driver. This names need to be consistent with the ones declared in the URDF file of the robot and must exist also in the robot_joints declared in the default_robot_specification.",
                    "type":"array",
                    "items": {"type": "string"},
                    "default": [
                        "maira7M_joint1",
                        "maira7M_joint2",
                        "maira7M_joint3",
                        "maira7M_joint4",
                        "maira7M_joint5",
                        "maira7M_joint6",
                        "maira7M_joint7"
                    ]
                },
                "periodicity" : {
                    "description":"Periodicity in which the integration will be performed in seconds. 1/periodicity is the update frequency in Hz.",
                    "type":"number",
                    "const": 0.0
                }
          }
        }
      }
}